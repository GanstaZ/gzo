{% extends '@ganstaz_gzo/layout/base.twig' %}

{% block top_content %}

	{% if tabs|length > 1 %}
		<div class="gzo-flex gzo-border-bottom" role="navigation">
			<ul id="nav-main" class="gzo-nav t-gzo-nav linklist gzo-nav-ml" role="menubar">
				{% for tab in tabs %}
					{{ include('@ganstaz_gzo/includes/tab-item.twig') }}
				{% endfor %}
			</ul>
		</div>
	{% endif %}

{% endblock %}

{% block content %}

	{% block mid_top %}{% endblock %}

	<div class="inner mid-content">
		{% block mid_content %}{% endblock %}
	</div>

{% endblock %}
