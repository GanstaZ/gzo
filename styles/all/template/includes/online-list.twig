<div class="gzo-block-stats">
	{% EVENT gzo_online_prepend %}

	{{ TOTAL_USERS_ONLINE }} ({{ L_ONLINE_EXPLAIN }})<br>{{ RECORD_USERS }}<br>

	{% if U_VIEWONLINE %}
		<br>{{ LOGGED_IN_USER_LIST }}<br>

		{% if legend %}
			<em>{{ lang('LEGEND') ~ lang('COLON') }}
				{% for group in legend %}
					{% set color = group.color ? 'color:#' ~ group.color : '' %}
					{% set name = get_group_name(group.name) %}

					{% if group.link %}
						{{ link({'href': group.link, 'style': color, 'alt': name}, name) }}
					{% else %}
						<span{% if color %} style="{{ color }}"{% endif %}>{{ name }}</span>
					{% endif %}{{ not loop.last ? ', ' }}
				{% endfor %}
			</em>
		{% endif %}

	{% endif %}

	{% EVENT gzo_online_append %}
</div>
