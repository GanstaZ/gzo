{% embed '@ganstaz_web/includes/block-item.twig' %}
	{% from '@ganstaz_web/macros/tags.twig' import icon %}

	{% block block_heading %}{{ lang('LEADERS') }}{% endblock %}

	{% block block_content %}
		<dl class="c-gzo-info">

			<dt class="c-stat-head">{{ lang('USERNAME') }}</dt>
			<dd class="t-gzo-text-right c-stat-head">{{ lang('POSTS') }}</dd>

		    {% for posters in top_posters %}

			    <dt>{{ loop.index ~ '.' ~ icon('fa', 'star fa-fw icon-gold', null, posters.top)|trim }}</dt>
				<dd class="t-gzo-text-right">{{ posters.posts }}</dd>

		    {% endfor %}

		</dl>
	{% endblock %}

{% endembed %}
